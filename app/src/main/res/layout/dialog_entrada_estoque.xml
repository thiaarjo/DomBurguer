<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_screen"
    android:orientation="vertical"
    android:paddingBottom="24dp">

    <View
        android:layout_width="40dp"
        android:layout_height="4dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:background="#333333" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="20dp"
        android:layout_marginBottom="24dp">

        <ImageButton
            android:id="@+id/btnClose"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_close"
            app:tint="@color/text_white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Entrada de Estoque"
            android:textColor="@color/text_white"
            android:textSize="18sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="20dp">

            <TextView
                style="@style/LabelText"
                android:text="Nome do Item" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/CustomTextInputStyle"
                android:layout_marginBottom="24dp"
                app:startIconDrawable="@drawable/ic_box_amarelo">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etNomeItem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/CustomEditTextStyle"
                    android:hint="Ex: Pão de Brioche" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                style="@style/LabelText"
                android:text="Unidade de Medida" />

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chipGroupUnidade"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:selectionRequired="true"
                app:singleSelection="true">

                <com.google.android.material.chip.Chip
                    style="@style/CustomChipStyle"
                    android:id="@+id/chipUN"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="UN"
                    android:checked="true"/>
                <com.google.android.material.chip.Chip
                    style="@style/CustomChipStyle"
                    android:id="@+id/chipKG"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="KG" />
                <com.google.android.material.chip.Chip
                    style="@style/CustomChipStyle"
                    android:id="@+id/chipLT"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="LT" />
                <com.google.android.material.chip.Chip
                    style="@style/CustomChipStyle"
                    android:id="@+id/chipPCT"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PCT" />
            </com.google.android.material.chip.ChipGroup>

            <TextView
                style="@style/LabelText"
                android:text="Estoque Mínimo" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/CustomTextInputStyle"
                android:layout_marginBottom="24dp"
                app:startIconDrawable="@drawable/ic_alert">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etEstoqueMinimo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/CustomEditTextStyle"
                    android:inputType="number"
                    android:hint="0" />
            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_input_rounded"
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_marginBottom="24dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_calculator"
                        app:tint="@color/accent_yellow"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Calculadora de Custo"
                        android:textColor="@color/text_white"
                        android:textStyle="bold"
                        android:layout_marginStart="8dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:baselineAligned="false">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginEnd="8dp">
                        <TextView
                            style="@style/LabelTextSmall"
                            android:text="Preço Pacote (R$)"/>
                        <EditText
                            android:id="@+id/etCalcPrecoPacote"
                            style="@style/SmallInputStyle"
                            android:hint="0,00"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="8dp">
                        <TextView
                            style="@style/LabelTextSmall"
                            android:text="Qtd no Pacote"/>
                        <EditText
                            android:id="@+id/etCalcQtdPacote"
                            style="@style/SmallInputStyle"
                            android:hint="1"/>
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#333333"
                    android:layout_marginVertical="16dp"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Custo Unitário"
                        android:textColor="@color/text_grey"
                        android:layout_centerVertical="true"/>
                    <TextView
                        android:id="@+id/tvCustoUnitarioFinal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="R$ 0,00"
                        android:textColor="@color/accent_yellow"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Automático"
                        android:textColor="#666666"
                        android:textSize="10sp"
                        android:layout_alignParentEnd="true"
                        android:layout_below="@id/tvCustoUnitarioFinal"/>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="20dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSalvarEstoque"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/bg_button_yellow_rounded"
            android:text="SALVAR"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginBottom="12dp"/>

        <TextView
            android:id="@+id/btnCancelarEstoque"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CANCELAR"
            android:textColor="@color/text_white"
            android:textAlignment="center"
            android:padding="12dp"
            android:background="?attr/selectableItemBackground"
            android:textStyle="bold"/>
    </LinearLayout>

</LinearLayout>