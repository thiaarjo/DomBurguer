<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="6dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="0dp"
    app:strokeWidth="1dp"
    app:strokeColor="#E0E0E0"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvNomeInsumoItem"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Pão de Hambúrguer"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/black_strong"/>

            <TextView
                android:id="@+id/tvQtdInsumoItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="150"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/black_strong"/>

            <TextView
                android:id="@+id/tvUnidadeInsumoItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Un"
                android:textSize="14sp"
                android:textColor="@color/grey_text"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#F5F5F5"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Estoque Mínimo: "
                android:textSize="12sp"
                android:textColor="@color/grey_text"/>

            <TextView
                android:id="@+id/tvMinInsumoItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10"
                android:textSize="12sp"
                android:textColor="@color/grey_text"/>

            <TextView
                android:id="@+id/tvAlertaEstoque"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="⚠️ REPOR ESTOQUE"
                android:gravity="end"
                android:textSize="11sp"
                android:textStyle="bold"
                android:textColor="@color/red_alert"
                android:visibility="gone"/> </LinearLayout>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>