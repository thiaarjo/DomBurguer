<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="6dp"
    app:cardBackgroundColor="@color/bg_card"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_box_amarelo"
            app:tint="@color/accent_yellow"/> <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="16dp">

        <TextView
            android:id="@+id/tvNomeInsumo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pão de Hambúrguer"
            android:textColor="@color/text_white"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tvDetalheInsumo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="50 UN | Min: 10"
            android:textColor="@color/text_grey"
            android:textSize="13sp"
            android:layout_marginTop="4dp"/>
    </LinearLayout>

        <TextView
            android:id="@+id/tvPrecoInsumo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="R$ 0,50"
            android:textColor="@color/accent_yellow"
            android:textStyle="bold"/>

    </LinearLayout>
</androidx.cardview.widget.CardView>